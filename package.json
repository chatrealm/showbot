{
  "name": "showbot",
  "version": "1.0.0",
  "description": "Node based port of lkalif/showbot",
  "main": "build/start.js",
  "private": true,
  "engines": {
    "node": ">=6.0"
  },
  "scripts": {
    "build": "npm-run-all clean build:server build:prod copy:files",
    "build:server": "babel --ignore src/frontend --ignore src/public -d ./build ./src -s",
    "build:dev": "webpack -d --progress --color",
    "build:prod": "webpack -p --progress --color --env.prod 1",
    "clean": "rimraf build src/public/**/*.*",
    "copy:files": "copyfiles -u 1 src/views/* src/views/**/* build",
    "dev": "npm-run-all dev:nodemon-update-fix --parallel dev:server dev:webpack",
    "dev:nodemon-update-fix": "nodemon -v || true",
    "dev:server": "cross-env NODE_ENV=development NODE_CONFIG='{\\\"dev\\\":true}' nodemon --exec babel-node --debug src/start.js",
    "dev:webpack": "nodemon --exec babel-node --watch bin/dev-server.js --watch webpack.config.babel.js bin/dev-server.js",
    "lint": "xo",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "start": "cross-env NODE_ENV=production node ./build/start.js"
  },
  "dependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-modern-node": "^2.0.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "bluebird": "^3.3.5",
    "body-parser": "^1.15.1",
    "bulma": "0.0.26",
    "config": "^1.20.1",
    "copyfiles": "^0.2.1",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "feathers": "^2.0.1",
    "feathers-authentication": "^0.7.7",
    "feathers-hooks": "^1.5.2",
    "feathers-knex": "^2.1.2",
    "feathers-memory": "^0.7.1",
    "feathers-rest": "^1.3.0",
    "feathers-socketio": "^1.4.0",
    "file-loader": "^0.8.5",
    "ipware": "0.0.8",
    "irc-framework": "^2.0.0",
    "json-loader": "^0.5.4",
    "knex": "^0.11.1",
    "lodash": "^4.12.0",
    "moment": "^2.13.0",
    "motion-ui": "^1.2.2",
    "node-sass": "^3.7.0",
    "nunjucks": "^2.4.2",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "vue": "^1.0.22",
    "vue-hot-reload-api": "^1.3.2",
    "vue-html-loader": "^1.2.2",
    "vue-loader": "^8.3.1",
    "vue-style-loader": "^1.0.0",
    "vue-syncers-feathers": "^0.2.0",
    "webpack": "^2.1.0-beta.7",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "devDependencies": {
    "cross-env": "^1.0.7",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.13.4",
    "http-proxy-middleware": "^0.15.0",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.1.1",
    "sqlite3": "^3.1.3",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-notifier": "^1.3.0",
    "xo": "^0.15.0"
  },
  "author": "t2t2 <taavot@gmail.com>",
  "license": "MIT",
  "xo": {
    "exnext": true,
    "ignores": [
      "build/**/*.*",
      "src/public/**/*"
    ],
    "semicolon": false,
    "overrides": [
      {
        "files": "database/migrations/*.js",
        "rules": {
          "xo/filename-case": 0
        }
      }
    ]
  }
}
