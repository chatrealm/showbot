{
  "name": "showbot",
  "version": "1.0.0",
  "description": "Node based port of lkalif/showbot",
  "main": "build/start.js",
  "private": true,
  "engines": {
    "node": ">=6.0"
  },
  "scripts": {
    "build": "npm-run-all clean build:server build:prod copy:files",
    "build:server": "babel --ignore src/frontend --ignore src/public -d ./build ./src -s",
    "build:dev": "webpack -d --progress --color",
    "build:prod": "webpack -p --progress --color --env.prod 1",
    "clean": "rimraf build src/public/**/*.*",
    "copy:files": "copyfiles -u 1 src/views/* src/views/**/* build",
    "dev": "npm-run-all dev:nodemon-update-fix --parallel dev:server dev:webpack",
    "dev:nodemon-update-fix": "nodemon -v || true",
    "dev:server": "cross-env NODE_ENV=development NODE_CONFIG='{\\\"dev\\\":true,\\\"port\\\":8000}' nodemon --exec babel-node --debug src/start.js",
    "dev:webpack": "nodemon --exec babel-node --watch bin/dev-server.js --watch webpack.config.babel.js bin/dev-server.js",
    "lint": "xo",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "start": "cross-env NODE_ENV=production node ./build/start.js"
  },
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-env": "0.0.8",
    "babel-runtime": "^6.18.0",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "bulma": "0.2.3",
    "config": "^1.24.0",
    "copyfiles": "^1.0.0",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.0",
    "debug": "^2.3.2",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "feathers": "^2.0.2",
    "feathers-authentication": "^0.7.12",
    "feathers-errors": "^2.5.0",
    "feathers-hooks": "^1.6.1",
    "feathers-knex": "^2.5.0",
    "feathers-memory": "^1.0.1",
    "feathers-rest": "^1.5.2",
    "feathers-socketio": "^1.4.2",
    "file-loader": "^0.9.0",
    "ipware": "1.0.0",
    "irc-framework": "^2.5.0",
    "json-loader": "^0.5.4",
    "knex": "^0.12.6",
    "lodash": "^4.17.2",
    "moment": "^2.16.0",
    "motion-ui": "^1.2.2",
    "node-sass": "^3.13.0",
    "npm-run-all": "^3.1.1",
    "nunjucks": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.0.0",
    "postcss-loader": "^1.1.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "socket.io-client": "^1.5.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "vue": "^2.0.7",
    "vue-hot-reload-api": "^2.0.6",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^9.9.5",
    "vue-style-loader": "^1.0.0",
    "vue-syncers-feathers": "^0.4.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "devDependencies": {
    "cross-env": "^3.1.3",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.14.0",
    "http-proxy-middleware": "^0.17.2",
    "nodemon": "^1.11.0",
    "sqlite3": "^3.1.8",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-notifier": "^1.4.1",
    "xo": "^0.17.1"
  },
  "author": "t2t2 <taavot@gmail.com>",
  "license": "MIT",
  "xo": {
    "exnext": true,
    "ignores": [
      "build/**/*.*",
      "src/public/**/*"
    ],
    "overrides": [
      {
        "files": "database/migrations/*.js",
        "rules": {
          "xo/filename-case": 0
        }
      },
      {
        "files": "src/frontend/**/*",
        "rules": {
          "import/namespace": 0,
          "import/no-named-as-default-member": 0,
          "import/no-named-as-default": 0
        }
      }
    ],
    "semicolon": false
  }
}
